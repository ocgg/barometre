<h1>Tous les événements</h1>

<div class="backgd-card" >
  <div class="filtre_map_list">
    <div class="map">
      <%= link_to request.original_fullpath.gsub('/events', '/map') do %>
        <%= image_tag "icones/location_white.svg", class: "icone_map" %>
      <% end %>
    </div>
    <div class="settings">
      <%= link_to filter_path do %>
        <%= image_tag "icones/settings_pink.svg", class: "icone_filter" %>
      <% end %>
    </div>
  </div>
  <% if @events.empty?%>
    <p class="no-results">Aucun résultat pour votre recherche.</p>
  <% end %>
  <%# Tout le code des cards de l'index se trouve dans shared/_events_index.html.erb %>
  <%= render "shared/events_index" %>
</div>



