<h2><%= @event.name %></h2>
  <p><%= @event.date.strftime('Le %d/%m/%y à %Hh%M') %></p>
  <p><%= @event.venue.name %></p>
  <p><%= @event.venue.address %></p>
  <p><%= @event.description %></p>
  <p><%= @event.price %></p>

<%= simple_form_for [@event, @event.bookmark] do |f| %>
  <%= f.association :event, collection: Bookmark.all, include_blank: false %>
  <%= f.submit "Ajouter à ma liste", class: 'btn btn-primary' %>
<% end %>
