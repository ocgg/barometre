<p>Find me in app/views/events/new.html.erb</p>
<%= simple_form_for @event do |f| %>
        <div class= "form-group">
            <%= f.input :name, label: "Nom", :required => true, class: "form-control" %>
        </div>
        <div class= "form-group">
          <%= f.input :date, label: "Date", :required => true, class: "form-control" %>
        </div>
        <%# <div class= "form-group">
          <%= f.input :subcategory, label: "Type d'évènement", :required => true, class: "form-control" %>
        <div class= "form-group"> 
          <%= f.input :venue, label: "Lieu", :required => true, class: "form-control" %>
        <div class= "form-group">
          <%= f.input :description, label: "Description", :required => true, class: "form-control" %>
        </div>
        <div class= "form-group">
          <%= f.input :photo, as: :file, class: "form-control" %>
        </div>
        <div class= "form-group">
          <%= f.button :submit, "Soumettre", class: "btn btn-danger mt-3" %>
        </div>
      <% end %>
